<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.practice.domain.users.UsersDao">

<select id="findByUsername"
		resultType="com.example.practice.domain.users.Users">
    select * from users WHERE username = #{username}
</select>

<insert id="insertSeller" useGeneratedKeys="true" keyProperty="usersId">
    insert into users(username, password, role, created_at)
    values(#{username}, #{password}, "seller", NOW())
</insert>

<insert id="insertBuyer" useGeneratedKeys="true" keyProperty="usersId">
    insert into users(username, password, role, created_at)
    values(#{username}, #{password}, "buyer", NOW())
</insert>

</mapper>